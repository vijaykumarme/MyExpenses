<form method="post" class="mt-4">
    <div class="card border-primary mb-3 mt-3 pt-1" style="max-width: 30rem;">
        <div class="card-header p-2 text-center"><h3>Delete Expense</h3></div>
        @* <div class="row pt-4 pb-0">
        <span class="col-8"></span>
        <a asp-controller="Home" asp-action="Index" class="col-4 pe-4" style="text-align: end; text-decoration:none"><i class="bi bi-arrow-left text-success"></i>Back</a>
        </div> *@
        <div class="card-body">
            <div class="form-group">
                <label class="col-form-label mt-4" for="inputDefault">Category Name</label>
                <input type="text" class="form-control" placeholder="Category" id="inputDefault">
            </div>
            <div class="form-group">
                <label class="col-form-label col-form-label-sm mt-4" for="inputSmall">Name</label>
                <input class="form-control form-control-sm" type="text" placeholder="Enter Name" id="inputSmall">
            </div>
            <div class="form-group">
                <label class="col-form-label col-form-label-sm mt-4" for="inputSmall">Location</label>
                <input class="form-control form-control-sm" type="text" placeholder="Enter Location" id="inputSmall">
            </div>
            <div class="form-group">
                <label class="col-form-label col-form-label-sm mt-4" for="inputSmall">Money</label>
                <input class="form-control form-control-sm" type="text" placeholder="Enter Money" id="inputSmall">
            </div>
            <div class="form-group">
                <label class="col-form-label col-form-label-sm mt-4" for="inputSmall">Time</label>
                <input class="form-control form-control-sm" type="text" placeholder="Enter Time" id="inputSmall">
            </div>
            <div class="form-group align-items-center row pt-4">
                <div class="col-6">
                    <button type="submit" class="btn btn-success m-auto col-6 form-control">Delete</button>
                </div>
                <div class="col-6">
                    <a class="col-6 text-center form-control text-decoration-none" asp-controller="Home" asp-action="Index">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</form>
